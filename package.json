{
  "name": "goddancer.github.io",
  "version": "1.0.0",
  "description": "## 致谢",
  "main": "index.js",
  "scripts": {
    "dev": "bundle exec jekyll serve",
    "dev:drafts": "bundle exec jekyll serve --drafts --incremental",
    "codemirror": "yarn workspace @jico/codemirror",
    "imageviewer": "yarn workspace @jico/imageviewer",
    "demo": "yarn workspace @jico/demo",
    "d3": "yarn workspace @jico/d3",
    "vue3": "yarn workspace @jico/vue3-template",
    "svg": "yarn workspace @jico/svg",
    "keyboard": "yarn workspace @jico/keyboard",
    "scroll": "yarn workspace @jico/virtual-scroll",
    "common": "yarn workspace @jico/common",
    "axios": "yarn workspace @jico/axios-enchance",
    "vw-rem": "yarn workspace @jico/vw-rem",
    "directives": "yarn workspace @jico/vue-directives",
    "cp:template": "rsync -avr --exclude=\"./packages/demo/template/node_modules/*\" ./packages/demo/template/* ./packages/demo/new-template"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goddancer/goddancer.github.io.git"
  },
  "keywords": [],
  "author": "",
  "private": true,
  "license": "ISC",
  "workspaces": {
    "packages": [
      "packages/apps/*",
      "packages/common",
      "packages/demo/*"
    ],
    "nohoist": [
      "**/codemirror",
      "**/viewerjs",
      "**/axios"
    ]
  },
  "bugs": {
    "url": "https://github.com/goddancer/goddancer.github.io/issues"
  },
  "homepage": "https://github.com/goddancer/goddancer.github.io#readme",
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css,vue,less,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "volta": {
    "node": "17.5.0",
    "yarn": "1.22.17"
  }
}
